{
  "name": "discoverability-action",
  "description": "Adds a comment to a pull request with areas of your code to test",
  "private": true,
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ncc build index.ts --watch --minify",
    "build": "ncc build index.ts --minify",
    "test": "",
    "lint": "yarn run eslint '**/*.{js,ts,tsx}'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shopify/discoverability-action.git"
  },
  "keywords": [],
  "author": "Andre Rocha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Shopify/discoverability-action/issues"
  },
  "homepage": "https://github.com/Shopify/discoverability-action#readme",
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add ./dist/index.js"
    }
  },
  "devDependencies": {
    "@zeit/ncc": "^0.20.5",
    "eslint": "^5.16.0",
    "eslint-plugin-shopify": "^28.0.0",
    "husky": "^3.0.5",
    "prettier": "^1.16.4",
    "stylelint": "^9.10.1",
    "stylelint-config-shopify": "^7.1.0"
  },
  "prettier": {
    "arrowParens": "always",
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false
  },
  "eslintConfig": {
    "extends": [
      "plugin:shopify/typescript",
      "plugin:shopify/react",
      "plugin:shopify/jest",
      "plugin:shopify/node",
      "plugin:shopify/prettier"
    ],
    "settings": {
      "react": {
        "version": "16.7"
      }
    },
    "rules": {
      "no-console": "off",
      "node/exports-style": "off",
      "react/prop-types": "off",
      "shopify/jsx-no-hardcoded-content": "off",
      "shopify/jsx-prefer-fragment-wrappers": "off"
    },
    "overrides": [
      {
        "files": [
          "**/rollup.config.js",
          "**/tests/*.js",
          "**/scripts/*.js"
        ],
        "rules": {
          "import/no-extraneous-dependencies": "off",
          "node/no-extraneous-require": "off"
        }
      },
      {
        "files": [
          "packages/polaris-icons/src/index.ts",
          "packages/polaris-icons-internal/src/index.ts"
        ],
        "rules": {
          "shopify/images-no-direct-imports": "off"
        }
      },
      {
        "files": [
          "packages/app-icon-explorer/**/*"
        ],
        "rules": {
          "id-length": [
            "error",
            {
              "min": 2,
              "exceptions": [
                "_",
                "q"
              ]
            }
          ]
        }
      }
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-shopify/prettier"
    ],
    "rules": {
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "@actions/core": "^1.1.1",
    "@actions/github": "^1.1.0",
    "@bugsnag/js": "^6.4.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "node-cmd": "^3.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "typescript": "^3.6.3"
  }
}
